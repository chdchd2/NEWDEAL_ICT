<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions 
  PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
  "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
<tiles-definitions>
 	<definition name=".main" template="/WEB-INF/views/layout.jsp">
		<put-attribute name="header" value="/WEB-INF/views/header.jsp"/>
		<put-attribute name="main" value="/WEB-INF/views/main.jsp"/>
		<put-attribute name="footer" value="/WEB-INF/views/footer.jsp"/>
		<put-attribute name="freeboard" value="/WEB-INF/views/freeboard/list.jsp"/>
	</definition> 
	
		<!-- <definition name=".main" template="/WEB-INF/views/main.jsp">
	
	
	</definition>  -->
	<definition name=".*.*.*.*.*" extends=".main">
		<put-attribute name="main" value="/WEB-INF/views/{1}/{2}/{3}/{4}/{5}.jsp"/>
	</definition>
	
	<definition name=".*.*.*.*" extends=".main">
		<put-attribute name="main" value="/WEB-INF/views/{1}/{2}/{3}/{4}.jsp"/>
	</definition>

	<definition name=".*.*.*" extends=".main">
		<put-attribute name="main" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
	</definition>
	

	<definition name=".*.*" extends=".main">
		<put-attribute name="main" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
	
	  <definition name=".*" extends=".main">
		<put-attribute name="main" value="/WEB-INF/views/{1}.jsp"/>
	</definition> 
	 

	
	


</tiles-definitions>